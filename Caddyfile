# Tailscale HTTPS mode (when CADDY_DOMAIN is set to hostname.tail*.ts.net)
{$CADDY_DOMAIN::80} {
    reverse_proxy frontend:3000
    
    # Use Tailscale certs if available
    tls /certs/{$CADDY_DOMAIN}.crt /certs/{$CADDY_DOMAIN}.key
    
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
    }
}
